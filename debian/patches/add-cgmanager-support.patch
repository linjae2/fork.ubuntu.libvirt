+bool cgm_dbus_connect(void)
+{
+    DBusError dbus_error;
+    DBusConnection *connection;
+    dbus_error_init(&dbus_error);
+
+    connection = dbus_connection_open_private(CGMANAGER_DBUS_SOCK, &dbus_error);
+    if (!connection) {
+        dbus_error_free(&dbus_error);
+        return false;
+    }
