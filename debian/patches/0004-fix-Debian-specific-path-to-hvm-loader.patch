       <wordsize>32</wordsize>
       <emulator>/usr/lib/xen/bin/qemu-dm</emulator>
-      <loader>/usr/lib/xen/boot/hvmloader</loader>
+      <loader>/usr/lib/xen-default/boot/hvmloader</loader>
       <machine>xenfv</machine>
       <domain type='xen'>
       </domain>
